<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="loginviewmodel"
            type="com.mz.coroutineapp.login.LoginViewModel" />
    </data>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.LoginActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/dinnextextbold2"
                android:textColor="#202020"
                android:layout_gravity="center_horizontal"
                android:text="تسجيل الدخول"
                android:layout_marginTop="@dimen/_20sdp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:layout_marginTop="@dimen/_20sdp"/>
            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="B.F.E FILTER مرحبا بك في"
                android:textSize="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="#202020"
                android:fontFamily="@font/dinnextextbold2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="من فضلك قم بتسجيل الدخول"
                android:textSize="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#8A8A8A"
                android:fontFamily="@font/dinnextregular"/>
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_16ssp"
                android:background="@drawable/txt_login_bg"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:drawableRight="@drawable/ic_call_icon"
                android:hint="رقم الموبايل"
                android:textColor="#8A8A8A"
                android:fontFamily="@font/dinnextregular"
                android:gravity="center_horizontal"
                android:inputType="number"/>
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_16ssp"
                android:background="@drawable/txt_login_bg"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:drawableRight="@drawable/ic_pass_icon"
                android:hint="كلمة المرور"
                android:textColor="#8A8A8A"
                android:fontFamily="@font/dinnextregular"
                android:gravity="center_horizontal"
                android:inputType="textPassword"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/dinnextmedium3"
                android:layout_margin="@dimen/_20sdp"
                android:text="تسجيل الدخول"
                android:padding="@dimen/_5sdp"
                android:backgroundTint="@null"
                android:background="@drawable/btn_login_bg"
                android:onClick="Login"/>
            <TextView
                android:id="@+id/txt_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تخطي"
                android:textColor="@color/purple_500"
                android:textSize="@dimen/_15ssp"
                android:fontFamily="@font/dinnextregular"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_10sdp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="لا يوجد عندك حساب ؟"
                    android:textColor="#202020"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/dinnextregular"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/txt_register_new_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تسجيل حساب جديد"
                    android:textColor="#C86603"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/dinnextmedium3"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt1"
                    android:layout_marginRight="@dimen/_5sdp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</layout>